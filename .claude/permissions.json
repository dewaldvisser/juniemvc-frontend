{
  "permissions": {
    "file_operations": {
      "read": true,
      "write": true,
      "create": true,
      "delete": false
    },
    "command_execution": {
      "development": true,
      "build": true,
      "test": true,
      "git": true,
      "package_management": true
    },
    "restricted_directories": [
      "node_modules",
      ".next",
      ".git"
    ],
    "allowed_file_types": [
      ".ts",
      ".tsx",
      ".js",
      ".jsx",
      ".json",
      ".md",
      ".css",
      ".scss",
      ".svg",
      ".png",
      ".jpg",
      ".jpeg"
    ]
  }
}